pipeline {
   environment {
          JAVA_TOOL_OPTIONS = "-Duser.home=/var/maven"
}
	    agent {
                docker {
                      image "maven:3.6.0-jdk-13" 
                      args "-v /tmp/maven:/var/maven/.m2 -e MAVEN_CONFIG=/var/maven/.m2" 
                         }

                      }   
            

                 stages {


	            stage ('Build') {
	                steps {
                              dir("cidr_convert_api/java/cidr-api"){

                               script{                   
                               sh 'mvn clean package'
                                 }
                                  }
                          }
			         
	                }
	           
	  
	            stage ('Create docker image') {
	                steps {
	                 echo "creando docker"
	                }
	

	            }
	        }
	}
